<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BloodnateBloodBank" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_salsa</item>
        <item name="colorPrimaryVariant">@color/candy_pink</item>
        <item name="colorOnPrimary">@color/new_york_pink</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_coral</item>
        <item name="colorSecondaryVariant" />
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BloodnateBloodBank.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BloodnateBloodBank.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BloodnateBloodBank.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>